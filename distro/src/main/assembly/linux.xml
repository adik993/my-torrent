<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>linux</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputFileNameMapping>my-torrent.jar</outputFileNameMapping>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>com.adik993:server:jar:${project.version}</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/assembly/resources/linux/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.service</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/assembly/resources/linux/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>500</fileMode>
        </fileSet>
    </fileSets>
</assembly>